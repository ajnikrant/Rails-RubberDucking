<h1>Apply to be add a new Duck here: </h1>

<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
        <%=error%><br>
        <%end%>
    <%end%>

<%=form_for @duck do |f|%>
    Full Name: <%= f.text_field :name%><br>
    Full Description: <%= f.text_field :description%><br>
    Assigned Student: <%= f.collection_select :student_id, @students, :id, :name  %><br>
    <%=f.submit%>
    <%end%>